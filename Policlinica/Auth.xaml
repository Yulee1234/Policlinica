            <RowDefinition Height="132*"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="1" Height="16" Width="285">
            <TextBlock Text="Введите или отсканируйте полис ОМС: " Foreground="#F94F4F4F" FontWeight="Bold" FontFamily="Tahoma" FontSize="20" Margin="-65,-16,-65,6.8"/>
