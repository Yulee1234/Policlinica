<Application x:Class="Policlinica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Policlinica"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Name="ButtonOne">
            <Setter Property="FontFamily" Value="Taprom"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Foreground" Value="#343838"/>
            <Setter Property="Background" Value="#77D0F5"/>
            <Setter Property="BorderBrush" Value="#77D0F5"/>
        </Style>
    </Application.Resources>
</Application>
